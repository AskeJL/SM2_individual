<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.1//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_2.dtd'>
<nta>
	<declaration>// Place global declarations here.
clock MT;
bool needWater;
bool pumpRunning;
int moist:= 100;
chan startPump, stopPump, notSaturated, saturated, tooSaturated;</declaration>
	<template>
		<name>Plant</name>
		<location id="id0" x="-183" y="-98">
			<name x="-217" y="-132">NeedWater</name>
		</location>
		<location id="id1" x="-17" y="-94">
			<name x="-27" y="-128">NotNeedWater</name>
		</location>
		<location id="id2" x="-34" y="76">
			<name x="-44" y="42">TooMoist</name>
		</location>
		<init ref="id1"/>
		<transition>
			<source ref="id1"/>
			<target ref="id2"/>
			<label kind="guard" x="-110" y="-25">moist &gt;=200</label>
			<label kind="synchronisation" x="-119" y="0">tooSaturated!</label>
			<nail x="-76" y="17"/>
		</transition>
		<transition>
			<source ref="id2"/>
			<target ref="id1"/>
			<label kind="guard" x="-8" y="16">moist &lt; 200</label>
			<label kind="synchronisation" x="-8" y="33">saturated!</label>
			<nail x="17" y="25"/>
		</transition>
		<transition>
			<source ref="id1"/>
			<target ref="id1"/>
			<label kind="guard" x="0" y="-103">MT&gt;=10</label>
			<label kind="assignment" x="1" y="-69">moist:= moist-1,
MT:=0</label>
			<nail x="67" y="-43"/>
			<nail x="67" y="-145"/>
		</transition>
		<transition>
			<source ref="id1"/>
			<target ref="id0"/>
			<label kind="guard" x="-144" y="-76">moist&lt;100</label>
			<label kind="synchronisation" x="-161" y="-59">notSaturated!</label>
			<nail x="-106" y="-55"/>
		</transition>
		<transition>
			<source ref="id0"/>
			<target ref="id1"/>
			<label kind="guard" x="-149" y="-174">moist &gt;= 100</label>
			<label kind="synchronisation" x="-144" y="-161">saturated!</label>
			<nail x="-106" y="-140"/>
			<nail x="-98" y="-140"/>
		</transition>
	</template>
	<template>
		<name>Pump</name>
		<declaration>clock PT;</declaration>
		<location id="id3" x="-238" y="-68">
			<name x="-255" y="-102">Active</name>
		</location>
		<location id="id4" x="-76" y="-68">
			<name x="-93" y="-102">NotActive</name>
		</location>
		<init ref="id4"/>
		<transition>
			<source ref="id3"/>
			<target ref="id3"/>
			<label kind="guard" x="-347" y="-93">PT&gt;10</label>
			<label kind="assignment" x="-347" y="-59">PT:=0,
moist:=moist+10</label>
			<nail x="-365" y="-51"/>
			<nail x="-374" y="-102"/>
		</transition>
		<transition>
			<source ref="id4"/>
			<target ref="id3"/>
			<label kind="synchronisation" x="-204" y="-34">startPump?</label>
			<label kind="assignment" x="-231" y="-17">pumpRunning = true</label>
			<nail x="-171" y="-34"/>
		</transition>
		<transition>
			<source ref="id3"/>
			<target ref="id4"/>
			<label kind="synchronisation" x="-204" y="-144">stopPump?</label>
			<label kind="assignment" x="-221" y="-119">pumpRunning = false</label>
			<nail x="-161" y="-102"/>
		</transition>
	</template>
	<template>
		<name>Rule1</name>
		<location id="id5" x="-85" y="-195">
			<name x="-102" y="-229">Idle</name>
		</location>
		<init ref="id5"/>
		<transition>
			<source ref="id5"/>
			<target ref="id5"/>
			<label kind="synchronisation" x="-67" y="-301">unSaturated?
StartPump!</label>
			<nail x="68" y="-374"/>
			<nail x="144" y="-246"/>
		</transition>
	</template>
	<system>// Place template instantiations here.
controller:=Controller();
plant:=Plant();
pump:=Pump();
// List one or more processes to be composed into a system.
system controller, plant, pump;
    </system>
	<queries>
		<query>
			<formula></formula>
			<comment></comment>
		</query>
	</queries>
</nta>
